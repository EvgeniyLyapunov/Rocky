@model IEnumerable<Rocky.Models.ApplicationType>

<div class="border-primary p-2">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success text-left">Application Type</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-success">
                    Create Applicatyon Type
                </a>
            </div>
        </div>
        <br /><br />
        <div class="row">
            @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th width="50%">Name</th>
                            <th width="50%"></th>
                        </tr>
                        
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                        {
                            <tr>
                                <td width="50%">
                                    @obj.Name
                                </td>
                                <td width="50%"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No application type exists</p>
            }
        </div>
    </div>
</div>

